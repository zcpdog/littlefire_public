<div class="container-fluid">
  <div class="body-content">
    <div class="row-fluid">
	<div class="span3">
		<%=render "user/common/left_side_bar"%>
	</div>
      <div class="span9">
		  <div class="panel panel-info">
			<div class="well well-small"> 我的个人信息</div>
			<div class="row-fluid">
				<div class="span3">
				  <div class="thumbnail">
					<%if current_user.picture.nil?%>
						<img data-src="holder.js/130x130" alt="130x130" >
					<%else%>
						<%=image_tag current_user.picture.image.url(:thumb)%>
					<%end%> 
			        <div class="caption">
			          <p><a href="#uploader" class="btn btn-primary btn-block" data-toggle="modal">上传照片</a> </p>
			        </div>
			      </div>
			    </div>
				<div class="span9">
				<%=current_user.username%>
				<br>
				<%=current_user.email%>
				</div>
				
			</div>
		</div>
      </div>
    </div>
    <hr>
    <%=render "user/common/footer"%>
  </div>
</div>
<div id="uploader" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">上传照片</h3>
  </div>
  <%=form_for [:user,Picture.new], html: {multipart: true} do |f|%>
  <div class="modal-body">
	  <%=f.label :image, t("deal.picture")%>
	  <div class="file-upload">
			<div class="row-fluid">
				<div class="span9">
					<%=f.file_field :image, class: "real-file required", style: "display:none;" %>
					<input class="input-block-level file-display-field required"
						 placeholder="<%=t("deal.picture")%>"  type="text" readonly="readonly">
	 		 	</div>
				<div class="span3">
	      		  <a class="btn btn-primary file-upload-btn"><i class="icon-cloud-upload"></i></i> 
					  浏览</a>
			    </div>
			</div>
		</div>
	  
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	<button class="btn btn-primary" type="submit">Upload</button>
  </div>
  <%end%>
  
</div>