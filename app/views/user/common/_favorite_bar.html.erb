<%if current_user.present? and Favorite.where(user_id: current_user.id, favorable: favorable).any?%>
	  	<%=link_to "已收藏(#{favorable.favorites.size})", "javascript:void(0)", class: "btn btn-primary"%>
<%else%>
  	<%=link_to "收藏(#{favorable.favorites.size})", eval("user_#{favorable.class.name.downcase}_favorites_path(favorable)"), 
	method: :post, remote: true, 
	class: "btn btn-primary toolbar-link favorite-#{favorable.class.name.downcase}-#{favorable.id}"%>
<%end%>
