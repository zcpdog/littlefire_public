<%if comments.any? %>
	<table class="table table-hover">
		<tbody>
		  <%comments.each do |comment|%>
	          <tr>
	            <td>
	            	<%if comment.commentable.pictures.any?%>
						<%=image_tag comment.commentable.pictures.first.image.url(:tiny),
						:height => 50, :width => 50 unless comment.commentable.pictures.first.image.nil?%>
					<%end%>
	            </td>
	            <td>
	            	<%=link_to comment.commentable.title, eval("#{comment.commentable_type.downcase}_path(#{comment.commentable_id})")%>
					<br>
					你的评论: <%=comment.content%>
	            </td>
	          </tr>
		  <%end%>
        </tbody>
	</table>
<%else%>
	<div class="well well-small">你还没有评论</div>
<%end%>