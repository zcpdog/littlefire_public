<div id="deal_<%=deal.id%>">
	<div class="well well-small"><strong><%=deal.display_title.html_safe%></strong></div>
	<div class="row-fluid">
	  <div class="span9 deal-body">
	    <div class="deal-body-presview"><%=deal.display_body.html_safe%></div>
		<div class="deal-body-extra"><%=deal.display_body_extra.try(:html_safe)%></div>
		<ul class="item-list mixed">
			<li class="template">
				<%deal.pictures.each do |pic|%>
					<%=image_tag pic.image.url(:large)%>
				<%end%>
			</li>
		</ul>
	  </div>
	  <div class="span3">
		<div class="thumbnail">
			<%if deal.pictures.any?%>
				<%=image_tag deal.pictures.first.image.url(:thumb), class: "media-object"%>
			<%else%>
		    	<img data-src="holder.js/130x130" alt="" class="media-object">
			<%end%>
	      	<div class="caption">
	        	<%=link_to "直达链接", deal.purchase_link, class: "btn btn-block", target: "_blank"%>
	      	</div>
	    </div>
	  </div>
	</div>
	<%=render "welcome/toolbar", deal: deal%>
</div>