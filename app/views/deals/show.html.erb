<div class="main">
    <div class="yui3-g-r">
    	<div class="yui3-u-1 fixed-sidebar">
		<div class="detail margin20 yui3-u left-margin pull-left">
		    <div class="item yui3-g-r">
			    <div class="time yui3-u-1-12">
					<span><%=time_ago_in_words @deal.created_at%></span>
					<span><%=l @deal.created_at, format: :digit%></span>
			    </div>
				<div class="content yui3-u-11-12">
					<h1 class="title"><%=link_to @deal.title.try(:html_safe), "javascript:void(0);"%></h1>
					<div class="yui3-g-r">
						<div class="yui3-u-3-4">
						    <div class="post-detail">
								<p><%=@deal.content.try(:html_safe)%></p>
						    </div>
						    <div class="entry-share margin30">
						        <div class="bg-gray clearfix">
						            <div class="pull-left">
						                <span>分类：</span>
										<%=show_categories @deal%>
						            </div>
						            <div class="pull-right">
						                <a href="#"  target='_blank' title='分享到新浪微博'></a>
						            </div>
						        </div>
						    </div>
						    <!-- <p class="text-center cmtload">评论加载中...</p> -->
							<div class="sp20 sc margin20" style="" id="commentWrap">
								<%=render partial: "comments/form", locals: {commentable: @deal}%>
								
							    <%=render partial: "comments/comments_wrap", locals: {commentable: @deal}%>
							</div>
						</div>
						<div class="yui3-u-1-4">
						    <div class="thumb-fix">
						        <div class="thumb">
									<%=image_tag @deal.picture.image.url(:medium) if @deal.picture.present?%>
									<%=holder_tag 194, "", "sky" unless @deal.picture.present?%>
									<%=link_to "直达链接", purchase_deal_path(@deal), class: "btn btn-danger", target: "_blank"%>
						        </div>
						        <div class="text-center addlike">
									<%=render partial: "user/common/favorite_bar", locals: {favorable: @deal}%>
						        </div>

						    </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%=render "layouts/commons/right_side"%>
		</div>
	</div>
	<div>
</div>
