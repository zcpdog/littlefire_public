<%@deals.each do |deal|%>
    <div class="item yui3-g-r <%= cycle("odd", "even") -%>">
        <div class="time yui3-u-1-12">
            <span><%=time_ago_in_words deal.created_at%></span>
        </div>
        <div class="content yui3-u-2-3">
            <h1 class="title">
				<%=link_to deal.title.try(:html_safe), deal_path(deal), :target=>"_blank"%>
			</h1>
            <div class="post-wrap post-hide">
                <div class="post">
                    <%=deal.content.try(:html_safe)%>
                </div>    
            </div>
            <div class="entry-share margin20 clearfix">
                <div class="share-content clearfix">
                    <div class="pull-left">
                        <span>分类：</span>
						<%=show_categories deal%>
                    </div>
                    <div class="pull-left">
                        <span>热度：</span><a href="javascript:;">41°</a>
                    </div>
                    <div class="pull-left">
			  		  	<%=link_to "收藏", user_deal_favorites_path(deal), 
						method: :post, remote: true, class: "deal-toolbar-link deal-favorite"%>
                    </div>
                    <div class="pull-left">
			  		  	<%=link_to "赞", user_deal_grades_path(deal), method: :post, remote: true, 
							class: "deal-toolbar-link deal-grade"%>
                    </div>
                    <div class="pull-left">
			  		  	<%=link_to "评论", deal_path(deal), target: "_blank",
							class: "deal-toolbar-link deal-comment"%>
                    </div>
                    <div style="visibility: hidden;" class="more pull-right"><a href="#">全文 ↓</a></div>
                </div>
            </div>
        </div>
        <div class="yui3-u-1-4 thumb">
			<%=image_tag deal.picture.image.url(:thumb) if deal.picture.present?%>
			<%=holder_tag 194, "picture" unless deal.picture.present?%>
			<%=link_to "直达链接", purchase_deal_path(deal), class: "btn btn-danger", target: "_blank"%>
        </div>
    </div>
<%end%>