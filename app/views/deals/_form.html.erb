<script>
function add_fields(link, association, content) {
	var new_id = new Date().getTime();
	var regexp = new RegExp("new_" + association, "g")
	$(link).before(content.replace(regexp, new_id));
}
function remove_fields(link) {
	$(link).prev("input[type=hidden]").val("1");
	$(link).closest(".answers, .attachment, div.discussion_topic").hide();	
}
</script>

<%= f.inputs :title ,:class=> "input-xxlarge" %>
<%= f.inputs :reason %>
<%= f.inputs :location %>
<%= f.inputs :amazing_price %>

<%= f.inputs :merchant, as: :select,collection: Merchant.all%>
<%= f.inputs :category, as: :select,collection: Category.all%>

<%= f.semantic_fields_for :pictures do |pic_f| %>   
	<%= render :partial => "pictures", :locals => {:f => pic_f} %>
<% end %>  

<p><%= link_to_add_fields 'add', f, :pictures %></p>

