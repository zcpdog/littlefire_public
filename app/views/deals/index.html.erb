<div class="content-l">
	<ul class="item-list mixed">
		<li class="template">
		  	<table class="table table-bordered">
		      <thead>
		        <tr>
		          <th>#</th>
		          <th>First Name</th>
		          <th>Last Name</th>
		          <th>Username</th>
		        </tr>
		      </thead>
		      <tbody>
				  <% @deals.each_with_index do |deal,index| %>
		          <tr>
		            <td><%=index+1%></td>
		            <td><%=deal.title%></td>
		            <td><%=deal.merchant.try(:name)%></td>
					<td><%=deal.category.try(:name)%></td>
		          </tr>
				  <%end%>
		      </tbody>
		    </table>
			<%= will_paginate @deals %>
		</li>
	</ul>
</div>