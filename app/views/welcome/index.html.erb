<div class="container">

  <div class="body-content">

    <!-- Example row of columns -->
    <div class="row">
      <div class="col-lg-9 non-padding-right">
	  <%@deals.each do |deal|%>
	<div class="panel  panel-info">
	  <div class="panel-heading"><%=link_to deal.title.html_safe, deal_path(deal), style: "color: #000"%></div>
	  <div class="row">
		<div class="col-lg-9">
			<div class="row">
				<div class="col-lg-6">
					<%=deal.category.try(:name)%>	
				</div>
				<div class="col-lg-6 ">
					<div class="pull-right"><%=deal.try(:merchant).try(:name)%></div>
				</div>
			</div>
			<hr>
			<p><%=deal.body%></p>
		</div>
	    <div class="col-lg-3">
			<div class="thumbnail">
				<div style="width:140px;height:140px;">
			      <a href="<%=deal_path(deal)%>" >
					<%if deal.pictures.any?%>
						<%=image_tag deal.pictures.first.image.url(:thumb)%>
					<%else%>
			        	<img data-src="holder.js/100%x140" alt="" >
					<%end%>
			      </a>
			  </div>
	        </div>
		  <div class="panel non-margin-bottom">
			  <a href="#"> <span class="glyphicon glyphicon-globe">直达链接</span></a>
		  </div>
	    </div>
	  </div>
	  <div class="row">
	  	<div class="col-lg-9">
	  		<div class="pull-right"><a href="#">
				<%=t :unfold_deal%><span class="glyphicon glyphicon-chevron-down"></span></a>
			</div>
	  	</div>
	  </div>   
		<div class="panel-footer  row">
			<div class="col-lg-2">
				<%=t :comment_deal%>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-thumbs-up">11</span></a>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-thumbs-down">22</span></a>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-comment"></span></a>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-share"></span></a>
			</div>
		</div>
	</div>
	<%end%>
	<!--end of panel-->
		<div class="row">
			<div class="col-lg-4">
				<div class="progress progress-striped active">
				  <div class="progress-bar" style="width: 100%"></div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="pull-right"><%= paginate @deals %></div>
			</div>
		</div>
    </div>
  <!--end of col-lg-10-->
      <div class="col-lg-3 non-padding-left">
		<div class="panel panel-success">
		  <div class="panel-heading"><strong>Panel heading</strong></div>
		  你好呀
		</div>   
     </div>
    </div>
    <hr>
    <footer>
      <p>&copy; Company 2013</p>
    </footer>
  </div>

</div> <!-- /container -->