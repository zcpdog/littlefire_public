<div class="container">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
  </div>
  <div class="body-content">

    <!-- Example row of columns -->
    <div class="row">
      <div class="col-lg-10">
	  <%@deals.each do |deal|%>
	<div class="panel  panel-info">
	  <div class="panel-heading"><a href="#"><b><%=deal.title%></b></a></div>
	<div class=row>
		<div class="col-lg-4">
			分类： <%=deal.category.try(:name)%>	
		</div>
		<div class="col-lg-2">
			来自：苏宁易购
		</div>
		<div class="col-lg-3">
			<div class="pull-right"><a href="#">直达链接 <span class="glyphicon glyphicon-globe"></span></a></div>
		</div>
		<div class="col-lg-3">
			<div class="pull-right">时间</div>
		</div>
	</div>
	<hr>
	  <div class="row">
		<div class="col-lg-9">
			
			<p><%=deal.reason%></p>
			
		</div>
	    <div class="col-lg-3">
	      <a href="#" class="thumbnail">
	        <img data-src="holder.js/100%x150" alt="">
			
	      </a>
		<br>
		
	    </div>
	  </div>
	  <div class="row">
	  	<div class="col-lg-9">
	  		<div class="pull-right"><a href="#">展开全文<span class="glyphicon glyphicon-chevron-down"></span></a></div>
	  	</div>
	  </div>
			   
		
		<div class="panel-footer  row">
			<div class="col-lg-2">
				评价本文 
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-thumbs-up">11</span></a>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-thumbs-down">22</span></a>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-comment"></span></a>
			</div>
			<div class="col-lg-2">
				<a href="#"><span class="glyphicon glyphicon-share"></span></a>
			</div>
			
		</div>
	</div>
	<%end%>
	<!--end of panel-->
		<div class="row">
			<div class="col-lg-4">
				<div class="progress progress-striped active">
				  <div class="progress-bar" style="width: 100%"></div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="pull-right"><%= paginate @deals %></div>
			</div>
		</div>
    </div>
  <!--end of col-lg-10-->
      <div class="col-lg-2">
		<div class="panel">
		  <div class="panel-heading"><strong>Panel heading</strong></div>
		  你好呀
		</div>   
     </div>
    </div>
    <hr>
    <footer>
      <p>&copy; Company 2013</p>
    </footer>
  </div>

</div> <!-- /container -->