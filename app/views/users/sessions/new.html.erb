<h1>登录到maishoudang.com</h1>
<%=form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|%>
	<%- flash.each do |name, msg| -%>
	    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
	  <%- end -%>
	<div class="control">
	<%=f.label :email, t(:email)%>
	<%=f.email_field :email%>
	</div>
	<div class="control">
      <%=f.label :password, t(:password)%>
      <%=f.password_field :password%>
  	</div>
    <div class="yui3-g">
        <button class="btn btn-success yui3-u-1-4" type="submit">登录</button>
        <div class="yui3-u-2-3">
            <div class="checkbox">
		        <%= f.check_box :remember_me%>
		  	  	<%= f.label :remember_me, t(:remember_me) %>
                
            </div>
        </div>
    </div>
    <!-- <div class="third-login title-line">
        <h2><span>直接使用合作账号登录</span></h2>
        <div class="yui3-g">
            <a href="#" class="yui3-u-1-2"><img src=/static/img/sina.png ></a>
            <a href="#" class="yui3-u-1-2"><img src=/static/img/qq.png ></a>
        </div>
    </div> -->
    <div class="no-account title-line">
        <h2><span>登陆出现问题？</span></h2>
        <div>
			<ul>
			<li>
			<%= link_to "忘记密码?", new_password_path(resource_name) %>
			</li>
			<li>
			<%= link_to "没有收到确认邮件？", new_confirmation_path(resource_name) %>
			</li>
			<li>
			<%= link_to "没有收到解锁邮件？", new_unlock_path(resource_name) %>
			</li>
			</ul>
        </div>
    </div>
	
    <div class="no-account title-line">
        <h2><span>还没有账号？</span></h2>
        <div>
			<%= link_to "点这里注册", new_registration_path(resource_name),:class=> "btn" %><br />
        </div>
    </div>
<%end%>