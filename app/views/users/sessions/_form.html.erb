<%=form_for(resource, :as => resource_name, :url => session_path(resource_name), :html =>{:class=>"login-form"}) do |f|%>
	<%=devise_error_messages!%>
    <legend><%=t(:sign_in_info)%></legend>
    <div class="control-group">
		<div class="controls">
		<%=f.label :email, t(:email)%>
		<%=f.email_field :email, autofocus: true, placeholder: t(:email)%>
		</div>
    </div>
    <div class="control-group">
		<div class="controls">
	      <%=f.label :password, t(:password)%>
	      <%=f.password_field :password, placeholder: t(:password)%>
	  </div>
    </div>
    <div class="checkbox">
      <%= f.check_box :remember_me%>
	  <%= f.label :remember_me, t(:remember_me) %>
    </div>
    <button type="submit" class="btn btn-primary"><%=t(:sign_in)%></button>
	<%=link_to t(:go_back), root_path%>
<%end%>