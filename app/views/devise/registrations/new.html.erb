<div class="container">
    <div class="body-content">
      <div class="row">
		<div class="col-lg-3"></div>
        <div class="col-lg-6">
			<%=form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|%>
			<%=devise_error_messages!%>
			  <fieldset>
			    <legend>注册成为小伙伴</legend>
			    <div class="form-group">
				<%=f.label "电子邮件"%>
				<%=f.email_field :email, placeholder: "电子邮箱", :class=> "form-control"%>
			    </div>
			    <div class="form-group">
			      <%=f.label "密码"%>
			      <%=f.password_field :password, placeholder: "密码", :class=> "form-control"%>
			    </div>
			    <div class="form-group">
				  <%=f.label "密码确认"%>
				  <%=f.password_field :password_confirmation, placeholder: "确认密码", :class=> "form-control"%> 
			    </div>
			    <button type="submit" class="btn btn-default">Submit</button>
			  </fieldset>
		  <%end%>
		</div>
	  </div>
	</div>
</div>
