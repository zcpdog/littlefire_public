<%=form_for(resource, :as => resource_name, :url => registration_path(resource_name),
	:html =>{:class=>"register-form"}) do |f|%>
	<%=devise_error_messages!%>
    <legend><%=t(:sign_up_info)%></legend>
    <div class="control-group">
		<div class="controls">
		<%=f.label :email, t(:email)%>
		<%=f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control"%>
	</div>
    </div>
    <div class="control-group">
		<div class="controls">
		<%=f.label :username, t(:username)%>
		<%=f.text_field :username, placeholder: t(:username), class: "form-control"%>
	</div>
    </div>
    <div class="control-group">
		<div class="controls">
	    <%=f.label :password, t(:password)%>
	    <%=f.password_field :password, placeholder: t(:password), class: "form-control"%>
	</div>
    </div>
    <div class="control-group">
		<div class="controls">
		<%=f.label :password_confirmation, t(:password_confirmation)%>
		<%=f.password_field :password_confirmation, placeholder: t(:password_confirmation), class: "form-control"%> 
	</div>
    </div>
    <button type="submit" class="btn btn-success"><%=t(:sign_up)%></button>
	<%=link_to t(:go_back), root_path%>
<%end%>