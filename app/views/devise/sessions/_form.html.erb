<%=form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|%>
	<%=devise_error_messages!%>
  <fieldset>
    <legend><%=t(:sign_in_info)%></legend>
    <div class="form-group">
		<%=f.label :email, t(:email)%>
		<%=f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control"%>
    </div>
    <div class="form-group">
      <%=f.label :password, t(:password)%>
      <%=f.password_field :password, placeholder: t(:password), class: "form-control"%>
    </div>
    <div class="checkbox">
      <%= f.check_box :remember_me%>
	  <%= f.label :remember_me, t(:remember_me) %>
    </div>
    <button type="submit" class="btn btn-primary"><%=t(:sign_in)%></button>
	<%=link_to t(:go_back), root_path%>
  </fieldset>
<%end%>