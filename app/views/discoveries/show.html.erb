<div class="main">
    <div class="yui3-g-r">
    	<div class="yui3-u-1 fixed-sidebar">
		<div class="detail margin20 yui3-u left-margin pull-left">
		    <div class="item yui3-g-r">
			    <div class="time yui3-u-1-12">
			        <span><%=time_ago_in_words @discovery.created_at%></span>
			    </div>
				<div class="content yui3-u-11-12">
					<h1 class="title"><%=link_to @discovery.title.try(:html_safe), "javascript:void(0);"%></h1>
					<div class="yui3-g-r">
						<div class="yui3-u-3-4">
						    <div class="post-detail">
								<p><%=@discovery.content.try(:html_safe)%></p>
						    </div>
						    <div class="entry-share margin30">
						        <div class="bg-gray clearfix">
						            <div class="pull-left">
						            </div>
						            <div class="pull-right">
						                <a href="#"  target='_blank' title=''></a>
						            </div>
						        </div>
						    </div>
						    <!-- <p class="text-center cmtload">评论加载中...</p> -->
							<div class="sp20 sc margin20" style="" id="commentWrap">
								<%=render partial: "comments/form", locals: {commentable: @discovery}%>
								
							    <h3>评论(<%=@discovery.comments.size%>)</h3>
							    <ul id="s-cmts" class="s-cmts">
									<%=render partial: "comments/items", locals:{commentable: @discovery}%>
							    </ul> 
							</div>
						</div>
						<div class="yui3-u-1-4">
						    <div class="thumb-fix">
						        <div class="thumb">
									<%=image_tag @discovery.picture.image.url(:medium) if @discovery.picture.present?%>
									<%=holder_tag 194, "", "sky" unless @discovery.picture.present?%>
									<%=link_to "直达链接", purchase_deal_path(@discovery), class: "btn btn-danger", target: "_blank"%>
						        </div>
						        <div class="text-center addlike">
						            <a class="btn btn-primary" href="#" data-id="/recommend/0303-ruelala-gilt-myhabit-ebay-sale/">
						                收藏(<%=@discovery.favorites.size%>)
						            </a>
						        </div>

						    </div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%=render "layouts/commons/right_side"%>
		</div>
	</div>
	<div>
</div>
