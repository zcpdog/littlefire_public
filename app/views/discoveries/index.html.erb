<div class="gray-background ">
	<div class="clear"></div>
	<div class="discover-container" id="container">
		<%@discoveries.each do |discovery|%>
			<div class="item masonryBrick displaynone masonry-brick">
				<div class="blBox">
					<div class="blPic" id="blPic_218439">
						<%=link_to image_tag(discovery.picture.image.url(:medium), style: "text-align:center;", width: "190px"),
							 discovery_path(discovery)%>
						<div class="blStore"><%=discovery.merchant.name%></div>
					</div>
			                    <h2>
									<%=link_to discovery.name, discovery_path(discovery), class: "mB10 blTitle"%>
			                    </h2>
					<div class="blInfo mB10">
					<strong><%=discovery.user.username%>：</strong><%=discovery.content_plain_text%>                                                                       <div class="blzd">
						<%=link_to "直达链接",discovery.purchase_link, class: "btn btn-danger"%>
					</div>
			</div>	
					<div class="conBotBlock blBot">
		                <div class="entry-share clearfix">
		                    <div class="pull-left">
					  		  	<%=link_to "踩(15)", "#", method: :post, remote: true, 
									class: "deal-toolbar-link deal-grade"%>
		                    </div>
		                    <div class="pull-left">
					  		  	<%=link_to "顶(15)", "#", method: :post, remote: true, 
									class: "deal-toolbar-link deal-grade"%>
		                    </div>
		                    <div class="pull-left">
					  		  	<%=link_to "收藏(15)", "#", method: :post, remote: true, 
								method: :post, remote: true, class: "deal-toolbar-link deal-favorite"%>
		                    </div>
		                    <div class="pull-left">
					  		  	<%=link_to "评论(15)", "#", method: :post, remote: true, 
									class: "deal-toolbar-link deal-comment"%>
		                    </div>
					
		                </div>
	                               
						<div class="blTime"><%=time_ago_in_words discovery.created_at%></div>
						<div class="clear"></div>
					</div>
				</div>
			</div>
		<%end%>
	</div>
</div>