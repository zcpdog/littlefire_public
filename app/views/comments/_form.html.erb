<%if user_signed_in?%>
	<%= form_for([:user,commentable,Comment.new], html: {id: "cmtfm"}) do |f| %>
        <h3>发布评论</h3>
		<%=f.text_area :content, class: "sc-input", cols: "30", rows: "5", autocomplete: "off" %>
        <div class="yui3-g">
            <p></p>
            <div id="emotion" class="yui3-u-5-6">
				<%=display_emotion%>
            </div>
            <div class="text-right yui3-u-1-6">
                <button type="submit" class="btn btn-block btn-primary">发布</button>
            </div>
        </div>
	<%end%>
<%else%>
	<div class="alert">评论前，请  <%=link_to t('sign_in'),new_user_session_path%></div>
<%end%>